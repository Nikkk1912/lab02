#include <iostream>

using namespace std;



int main()
{
    float result, first, second;

    cout << "Enter first number: ";
    cin >> first;
    cout << "Enter second number: ";
    cin >> second;
    
    while (cin.good()) {

        result = (first - second) / (first * second);
        cout << "Result is: " << result << endl;

        cout << "Enter first number: ";
        cin >> first;
        cout << "Enter second number: ";
        cin >> second;
    }

}
